<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@color/title_bg">
    
    <RelativeLayout 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:id="@+id/title_left"
        android:layout_margin="5dp">
        
        <ImageView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/title_left_image"
            android:src="@drawable/back"
            android:layout_centerVertical="true"/>
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/title_left_text"
            android:text="@string/back"
            android:textColor="@color/bottom_bg"
            android:textSize="24dp"
            android:layout_toRightOf="@id/title_left_image"/>
    </RelativeLayout>
    
    <RelativeLayout 
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_gravity="center"
        android:gravity="center"
        android:id="@+id/title_center">
        
        <ImageView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/title_center_image"
            android:src="@drawable/back"
            android:visibility="gone"
            android:layout_centerVertical="true"/>
        
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/title_center_text"
            android:text="@string/app_name"
            android:textColor="@color/bottom_bg"
            android:textSize="30dp"
            android:layout_toRightOf="@id/title_center_image"/>
    </RelativeLayout>
    
	
    <RelativeLayout 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:gravity="center"
        android:layout_margin="5dp"
        android:id="@+id/title_right">
        
        <ImageView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/title_right_image"
            android:src="@drawable/back"
            android:visibility="gone"
            android:layout_centerVertical="true"/>
        
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/title_right_text"
            android:text="@string/back"
            android:textColor="@color/bottom_bg"
            android:textSize="24dp"
            android:layout_toRightOf="@id/title_right_image"/>
    </RelativeLayout>
	
</LinearLayout>
