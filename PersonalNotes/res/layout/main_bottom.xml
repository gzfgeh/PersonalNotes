<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:gzfgeh="http://schemas.android.com/apk/res/com.gzfgeh.personalnote"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/bottom_bg">
    
    <View 
        android:layout_width="50dp"
        android:layout_height="4dp"
        android:id="@+id/cursor"
        android:background="@color/title_bg"/>
    
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:baselineAligned="true">
        
	    <RelativeLayout 
		    android:layout_width="0dp"
		    android:layout_height="fill_parent"
		    android:layout_weight="1"
		    android:id="@+id/text_layout">
		        
	        <ImageView 
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_gravity="center_horizontal"
	            android:background="@drawable/text"
	            android:contentDescription="@string/hello_world"
	            android:layout_alignParentTop="true"
	            android:layout_centerHorizontal="true"/>
	        
	        <com.gzfgeh.animation.ColorTrackView
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_gravity="center_horizontal"
	            android:padding="5dp"
	            android:id="@+id/text_msg"
	            gzfgeh:text="@string/text"
	            android:layout_alignParentBottom="true"
	            android:layout_centerHorizontal="true"
	            gzfgeh:text_size="24dp"
	            gzfgeh:progress="0"
	            gzfgeh:text_change_color="@color/title_bg"
	            gzfgeh:text_origin_color="@android:color/black"/>
		</RelativeLayout>
		
		<RelativeLayout 
		    android:layout_width="0dp"
		    android:layout_height="fill_parent"
		    android:layout_weight="1"
		    android:id="@+id/photo_layout">
	        <ImageView 
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_gravity="center_horizontal"
	            android:background="@drawable/photo"
	            android:contentDescription="@string/hello_world"
	            android:layout_alignParentTop="true"
	            android:layout_centerHorizontal="true"/>
	        
	        <com.gzfgeh.animation.ColorTrackView 
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_gravity="center_horizontal"
	            android:padding="5dp"
	            android:id="@+id/photo_msg"
	            gzfgeh:text="@string/photo"
	            android:layout_alignParentBottom="true"
	            android:layout_centerHorizontal="true"
	            gzfgeh:text_size="24dp"
	            gzfgeh:progress="0"
	            gzfgeh:text_origin_color="@android:color/black"
	            gzfgeh:text_change_color="@color/title_bg"/>
		</RelativeLayout>
		
		<RelativeLayout 
		    android:layout_width="0dp"
		    android:layout_height="fill_parent"
		    android:layout_weight="1"
		    android:id="@+id/sounds_layout">
		    
		        
	        <ImageView 
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_gravity="center_horizontal"
	            android:background="@drawable/sounds"
	            android:contentDescription="@string/hello_world"
	            android:layout_alignParentTop="true"
	            android:layout_centerHorizontal="true"/>
	        
	        <com.gzfgeh.animation.ColorTrackView 
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_gravity="center_horizontal"
	            android:padding="5dp"
	            android:id="@+id/sounds_msg"
	            gzfgeh:text="@string/sounds"
	            android:layout_alignParentBottom="true"
	            android:layout_centerHorizontal="true"
	            gzfgeh:text_size="24dp"
	            gzfgeh:progress="0"
	            gzfgeh:text_change_color="@color/title_bg"
	            gzfgeh:text_origin_color="@android:color/black"/>
		</RelativeLayout>
		
		<RelativeLayout 
		    android:layout_width="0dp"
		    android:layout_height="fill_parent"
		    android:layout_weight="1"
		    android:id="@+id/movie_layout">
		        
	        <ImageView 
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_gravity="center_horizontal"
	            android:background="@drawable/movie"
	            android:contentDescription="@string/hello_world"
	            android:layout_alignParentTop="true"
	            android:layout_centerHorizontal="true"/>
	        
	        <com.gzfgeh.animation.ColorTrackView 
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_gravity="center_horizontal"
	            android:padding="5dp"
	            android:id="@+id/movie_msg"
	            gzfgeh:text="@string/movie"
	            android:layout_alignParentBottom="true"
	            android:layout_centerHorizontal="true"
	            gzfgeh:text_size="24dp"
	            gzfgeh:progress="0"
	            gzfgeh:text_change_color="@color/title_bg"
	            gzfgeh:text_origin_color="@android:color/black"/>
		</RelativeLayout>
    </LinearLayout>
	
	
</LinearLayout>
